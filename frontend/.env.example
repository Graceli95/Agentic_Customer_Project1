# ============================================================================
# Frontend Environment Variables - Customer Service AI
# ============================================================================
# 
# Copy this file to .env.local for local development:
#   cp .env.example .env.local
#
# IMPORTANT: Never commit .env.local to version control!
#
# Note: Next.js 16 requires NEXT_PUBLIC_ prefix for variables exposed to the browser
# ============================================================================

# ----------------------------------------------------------------------------
# Backend API Configuration
# ----------------------------------------------------------------------------

# Backend API URL (required)
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# API timeout in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------

# Application environment (development | staging | production)
NEXT_PUBLIC_APP_ENV=development

# Application name (displayed in browser)
NEXT_PUBLIC_APP_NAME="Customer Service AI"

# Application version (sync with package.json)
NEXT_PUBLIC_APP_VERSION=0.1.0

# Enable debug mode (true | false)
NEXT_PUBLIC_DEBUG=false

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# Enable chat feature (true | false)
NEXT_PUBLIC_FEATURE_CHAT=true

# Enable file upload (true | false)
NEXT_PUBLIC_FEATURE_FILE_UPLOAD=true

# Enable voice input (true | false)
NEXT_PUBLIC_FEATURE_VOICE_INPUT=false

# Enable analytics (true | false)
NEXT_PUBLIC_FEATURE_ANALYTICS=false

# ----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# ----------------------------------------------------------------------------

# Google Analytics Measurement ID
# Example: G-XXXXXXXXXX
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------------------------------------------
# Third-Party Services (Optional)
# ----------------------------------------------------------------------------

# Clerk Authentication (if using)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# Stripe Public Key (if using payments)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------

# Mock API responses for development (true | false)
# NEXT_PUBLIC_MOCK_API=false

# Delay mock responses in ms (for testing loading states)
# NEXT_PUBLIC_MOCK_DELAY=1000

# ----------------------------------------------------------------------------
# WebSocket Configuration (if using real-time features)
# ----------------------------------------------------------------------------

# WebSocket URL (optional, for real-time chat)
# Development: ws://localhost:8000/ws
# Production: wss://api.yourdomain.com/ws
# NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# WebSocket reconnect interval in ms
# NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# ----------------------------------------------------------------------------
# Chat Configuration
# ----------------------------------------------------------------------------

# Maximum message length
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=2000

# Chat history limit (number of messages to display)
NEXT_PUBLIC_CHAT_HISTORY_LIMIT=50

# Enable message streaming (true | false)
NEXT_PUBLIC_ENABLE_STREAMING=true

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------

# Max requests per minute (client-side throttling)
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=30

# Rate limit window in milliseconds
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# ----------------------------------------------------------------------------
# UI/UX Configuration
# ----------------------------------------------------------------------------

# Default theme (light | dark | system)
NEXT_PUBLIC_DEFAULT_THEME=system

# Enable theme switcher (true | false)
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true

# Toast notification duration in ms
NEXT_PUBLIC_TOAST_DURATION=3000

# ----------------------------------------------------------------------------
# Security & CORS
# ----------------------------------------------------------------------------

# Allowed origins for CORS (comma-separated)
# Should match backend CORS_ORIGINS
# NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ----------------------------------------------------------------------------
# Server-Side Only Variables (No NEXT_PUBLIC_ prefix)
# ----------------------------------------------------------------------------
# These are NOT exposed to the browser and only available in:
# - API routes (/app/api/*)
# - Server Components
# - Server Actions
# ----------------------------------------------------------------------------

# Internal API key for server-side API calls (if needed)
# API_SECRET_KEY=your_secret_key_here

# Database URL (if needed for server-side operations)
# DATABASE_URL=

# Session secret (for authentication)
# SESSION_SECRET=

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# 
# 1. Variables with NEXT_PUBLIC_ prefix are exposed to the browser
# 2. Variables without prefix are only available server-side
# 3. .env.local takes precedence over .env
# 4. Restart dev server after changing environment variables
# 5. Use process.env.NEXT_PUBLIC_* in client components
# 6. Use process.env.* in server components and API routes
# 
# Documentation: https://nextjs.org/docs/app/building-your-application/configuring/environment-variables
# ============================================================================
